{
    "name": "lion/database",
    "description": "Package in charge of the generation and execution of processes with databases.",
    "type": "library",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/lion-packages/database/issues",
        "source": "https://github.com/lion-packages/database"
    },
    "autoload": {
        "psr-4": {
            "Lion\\Database\\": "src/LionDatabase/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.4",
        "ext-pdo": "*"
    },
    "require-dev": {
        "fakerphp/faker": "^1.24",
        "lion/test": "^3.3",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^12.0",
        "squizlabs/php_codesniffer": "^3.11",
        "vlucas/phpdotenv": "^5.6"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
